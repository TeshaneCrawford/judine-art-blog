---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

import { Icon } from 'astro-icon/components'
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/photos">Photos</HeaderLink>
			<!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
			<HeaderLink href="/bio">Bio</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.instagram.com/judinefiddler/" target="_blank">
				<span class="sr-only">Follow Judine on Instagram</span>
				<Icon name="uil:instagram-alt" size="28" />
			</a>
		</div>
	</nav>
</header>
<style>
	header {
	}
	h2 {
		margin: 0;
		text-transform: uppercase;
		font-weight: 500;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 0.5em;
		color: var(--black);
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
